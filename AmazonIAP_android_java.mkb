#!/usr/bin/env mkb
# Builder mkb file for the java portion of the AmazonIAP extension on android
platform JAVA

files
{
    (source/android)
    AmazonIAP.java
}

librarypath "$MARMALADE_ROOT/s3e/deploy/plugins/android/android.jar"
librarypath "$MARMALADE_ROOT/s3e/loader/android/s3e_release.jar"
librarypath "in-app-purchasing-1.0.3.jar"

option output-name=lib/android/AmazonIAP.jar
